        "neverAskForAddressInDV": true,
        "neverEncourageConfrontingAbuser": true,
        "neverEncourageVigilantism": true,
        "childAbuseReportGuidanceOnly": true,
        "neverDiscussSpecificMeans": true,
        "neverProvideMethodology": true
    },
