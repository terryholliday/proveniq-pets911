{
  "packageManager": "npm",
  "reporters": ["clear-text", "progress"],
  "testRunner": "jest",
  "coverageAnalysis": "off",
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "mutate": [
    "src/lib/petmayday-alert/**/*.ts",
    "!src/lib/petmayday-alert/**/*.d.ts"
  ],
  "ignorePatterns": [
    "**/__tests__/**",
    "**/node_modules/**"
  ],
  "jest": {
    "configFile": "jest.config.js",
    "enableFindRelatedTests": false
  },
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  }
}
